<h1>Welcome to the Admin Dashboard</h1>

<p><%= link_to 'Merchants', admin_merchants_path %></p>
<p><%= link_to 'Invoices', admin_invoices_path %></p>

<div id="top_customers">
<h3>Top 5 Customers:</h3>
<% @top_customers.each do |customer| %>
  <p><b><%= customer.first_name %></b> - Successful Transactions: <%= customer.total_transactions %></p>
<% end %>
</div>

<div id="incomplete_invoices">
<h3> Incomplete Invoices: </h3>
<% @incomplete_invoices.each do |invoice| %>
  <p><%= link_to "Invoice ##{invoice.id}", admin_invoice_path(invoice) %> | Created at: <%= invoice.created_at.strftime("%A, %B %d, %Y") %></p>
<% end %>
</div>