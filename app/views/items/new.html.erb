<h2>Create A New Item</h2>
<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, local: true do |f| %>
<%= f.label :name, 'Name:' %>
<%= f.text_field :name %>
<%= f.label :description, 'Description:' %>
<%= f.text_field :description %>
<%= f.label :unit_price, 'Unit price:' %>
<%= f.text_field :unit_price %>
<%= f.submit 'Submit' %>
<% end %>
