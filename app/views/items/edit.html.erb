<h4><%="Edit #{@item.name}" %></h4>
<br>
<div id="edit_form">
<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |f| %>
<%= f.label :name, 'Name:' %>
<%= f.text_field :item_name, value: @item.name %>
<%= f.label :description, 'Description:' %>
<%= f.text_field :item_description, value: @item.description %>
<%= f.label :unit_price, 'Current price:' %>
<%= f.text_field :item_unit_price, value: @item.unit_price %>
<%= f.submit 'Submit' %>
</div>
<% end %>

